<?xml version="1.0" encoding="utf-8"?>

<layout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data >
        <variable
            name="videoItem"
            type="android.example.com.boguscode.models.VideoItem"/>
        <variable
            name="itemViewModel"
            type="android.example.com.boguscode.ListItemViewModel" />
    </data>

<android.support.v7.widget.CardView android:id="@+id/card_view"

    android:layout_width="match_parent"
    android:layout_margin="0dp"
    android:layout_height="210dp"
    card_view:cardCornerRadius="0dp"
    card_view:elevation="14dp"
    android:clickable="true"

    android:onClick="@{itemViewModel.onOpenUrlWithBrowser(videoItem.vidUrl)}"

    

    >

    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textBackground"
            android:layout_width="388dp"
            android:layout_height="72dp"
            android:text=""
            android:background="@color/cardview_shadow_start_color"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="-7dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="0dp"
            card_view:layout_constraintLeft_toLeftOf="@+id/videoThumbnail"
            tools:layout_editor_absoluteY="138dp"
            android:visibility="@{itemViewModel.visibility}"
            />
        <!-- android:visibility="@{itemViewModel.visibility}"-->


        <TextView
            android:id="@+id/videoName"
            android:layout_width="123dp"
            android:layout_height="26dp"
            android:text="@{videoItem.name}"
            android:textSize="22sp"
            android:maxLines="1"
            card_view:layout_constraintTop_toTopOf="@+id/textBackground"
            android:layout_marginTop="7dp"
            android:layout_marginRight="286dp"
            card_view:layout_constraintRight_toRightOf="@+id/textBackground"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintLeft_toLeftOf="@+id/textBackground"
            card_view:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="286dp"
            tools:layout_editor_absoluteY="145dp"
            android:visibility="@{itemViewModel.visibility}"
            />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{videoItem.userName}"
            android:textSize="14sp"
            android:layout_marginRight="265dp"
            card_view:layout_constraintRight_toRightOf="@+id/textBackground"
            card_view:layout_constraintBottom_toBottomOf="@+id/textBackground"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/videoName"
            card_view:layout_constraintVertical_bias="1.0"
            android:layout_marginLeft="9dp"
            card_view:layout_constraintLeft_toLeftOf="@+id/textBackground"
            card_view:layout_constraintHorizontal_bias="0.0"
            android:visibility="@{itemViewModel.visibility}"
            />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="duration"
            android:textSize="22sp"
            android:layout_marginRight="39dp"
            card_view:layout_constraintRight_toRightOf="@+id/textBackground"
            android:layout_marginStart="191dp"
            android:layout_marginEnd="8dp"
            card_view:layout_constraintTop_toTopOf="@+id/textBackground"
            android:layout_marginTop="7dp"
            android:visibility="@{itemViewModel.visibility}"
            />

        <ImageView
            android:id="@+id/videoThumbnail"
            android:layout_width="385dp"
            android:layout_height="165dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp"
            android:elevation="8dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            tools:layout_editor_absoluteY="52dp"
            card_view:layout_constraintVertical_bias="0.0"
            android:scaleType="centerCrop"
            app:imgUrl="@{videoItem.thumbnailUrl}"

            />
        <!--  app:imgUrl="@{videoItem.thumbnailUrl}"-->



        <!--<TextView
            android:id="@+id/viewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="# views"
            android:textSize="14sp"
            android:layout_marginLeft="0dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/textBackground"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/duration"
            android:layout_marginStart="226dp"
            android:layout_marginEnd="8dp"
            card_view:layout_constraintLeft_toLeftOf="@+id/duration" />-->


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
    </layout>
